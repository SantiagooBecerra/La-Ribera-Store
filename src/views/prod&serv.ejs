<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todos los productos y servicios</title>
    <link rel="icon" href="/images/logo.png" type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .products {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
  margin-bottom: 40px;
}

.product-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.10);
  padding: 18px 16px;
  width: 240px; /* Ajusta el ancho para que entren 4 por fila */
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: box-shadow 0.3s;
  margin-bottom: 20px;
}
@media (max-width: 1100px) {
  .product-card {
    width: 45vw;
    min-width: 180px;
    max-width: 300px;
  }
}
@media (max-width: 700px) {
  .products {
    gap: 12px;
  }
  .product-card {
    width: 90vw;
    min-width: 140px;
    max-width: 98vw;
  }
}
    </style>
</head>
<body>
<%- include('./partials/header.ejs'); %>
<section>
    <h2 style="text-align:center; margin-top:20px; font-size:2.7rem;">Productos</h2>
    <div class="products">
        <% if (data && data.length > 0) { %>
             <% data.forEach((elemento,index)=>{  %>
                <article class="product-card">
                    <span class="border top"></span>
                    <span class="border right"></span>
                    <span class="border bottom"></span>
                    <span class="border left"></span>
                    <div class="image-container">
                        <img src="/images/<%= elemento.img %>" alt="producto" class="product_img">
                        <!-- <a href="#contacto" class="more-info-btn">Más info</a> -->
                        <a href="/producto/<%= elemento.id %>" class="more-info-btn">Más info</a>                           
                    </div>
                    <div class="main-article">
                        <i class="fas fa-truck"></i>
                        <p class="price">$<%= elemento.precio %></p>
                        <p class="discount">40% off</p>
                        <h4 class="description"><%= elemento.nombre %></h4>
                    </div>
                </article>
            <% }); %>
        <% } else { %>
            <p>No hay productos disponibles.</p>
        <% } %>
    </div>
</section>
<section>
    <h2 style="text-align:center; margin-top:20px; font-size:2.7rem;">Servicios</h2>
    <div class="products">
        <% if (dataa && dataa.length > 0) { %>
            <% dataa.forEach(function(servicio) { %>
                <article class="product-card">
                    <span class="border top"></span>
                    <span class="border right"></span>
                    <span class="border bottom"></span>
                    <span class="border left"></span>
                    <div class="image-container">
                        <img src="/images/<%= servicio.img %>" alt="<%= servicio.nombre %>" class="product_img">
                        <a href="/servicio/<%= servicio.id %>" class="more-info-btn">Más info</a>
                    </div>
                    <div class="main-article">
                        <i class="fas fa-truck"></i>
                        <p class="price">$<%= servicio.precio %></p>
                        <p class="discount">40% off</p>
                        <h4 class="description"><%= servicio.nombre %></h4>
                    </div>
                </article>
            <% }); %>
        <% } else { %>
            <p>No hay servicios disponibles.</p>
        <% } %>
    </div>
</section>
<%- include('./partials/footer.ejs'); %>
</body>
</html>
